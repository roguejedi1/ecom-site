<% layout('layouts/boilerplate') -%>
    <h1>POSTS INDEX!</h1>

    <div class="container">
        <div class="row">
          <%- include('../partials/searchFilters') %>
        </div>
    </div>

    <%- include('../partials/paginatePosts') %>

    <% posts.docs.forEach(function(post){ %>
        <div>
            <h2>
                <%= post.title %>
            </h2>
            <div>Price:
                <%= post.price %>
            </div>
            <div>
                <%= post.description %>
            </div>
            <div>
                <%= post.location %>
            </div>
            <div>
                <a href="/posts/<%= post.id %>">View more</a>
            </div>
        </div>
  <%  }); %>
